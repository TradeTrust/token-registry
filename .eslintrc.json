{
  "parser": "@babel/eslint-parser",
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "env": {
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    },
    "node": { "allowModules": ["ethers", "@nomicfoundation/hardhat-ethers"] }
  },
  "globals": {
    "ethers": "writable",
    "expect": "readonly"
  },
  "rules": {
    "import/extensions": "off",
    "import/no-unresolved": "off",
    "no-unused-expressions": 0,
    "import/no-extraneous-dependencies": ["error", { "includeInternal": true, "includeTypes": true }],
    "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "project": "./tsconfig.json"
      },
      "plugins": ["@typescript-eslint"],
      "rules": {
        "no-restricted-globals": "off",
        "import/prefer-default-export": "off",
        "no-console": "off",
        "import/no-extraneous-dependencies": [
          "error",
          { "devDependencies": ["**/*.test.*", "./hardhat.config.*", "./test/**/*.js", "./test/**/*.ts", "./tasks/**"] }
        ]
      }
    },
    {
      "files": ["test/*.js", "benchmark/*.js", "scripts/*.js"],
      "plugins": ["chai-friendly", "chai-expect"],
      "env": {
        "mocha": true
      },
      "globals": {
        "BigInt": "readonly"
      },
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
